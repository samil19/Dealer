@model IEnumerable<Dealer.Automovil>

@{
    ViewBag.Title = "Autos Guardados";
}

<h2>Autos Guardados</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Modelo)
        </th>
        <th>
            @Html.DisplayName("Año de Fabricacion")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>
            @Html.DisplayName("Tipo de Moneda")
        </th>
        <th>
           @Html.DisplayName("Cantidad de Pasajeros")
        </th>
        <th>
            @Html.DisplayName("Marca")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tipo_Automovil.Tipo)
        </th>
        <th>
            @Html.DisplayName("Tipo de Transmision")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Modelo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Año_Fabricacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Precio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tipo_Moneda)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cant_Pasajeros.ID_CanPasajeros)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Marca.Marca1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tipo_Automovil.Tipo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tipo_Trans.Tipo_Trans1)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.ID_Auto }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID_Auto })
        </td>
    </tr>
}

</table>
