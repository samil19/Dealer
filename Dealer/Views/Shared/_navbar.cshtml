<script>
    $(document).ready(function () {
        if ('@User.IsInRole("Administrator")' === "True") {
            $(".admin").removeAttr("hidden");
            $(".user").removeAttr("hidden");
        }
        if ('@Request.IsAuthenticated'=== 'True') {
            $(".user").removeAttr("hidden");
        }
        $("#gun").click(function () {
            search($('#bullet').val());
        });
    });
    function search(string) {
        var win = window.open('https://news.google.com/news/search/section/q/'+string+'/'+string+'?hl=en&gl=US&ned=us', '_blank');
        win.focus();
    }
    var h = 0;
    function add() {
        if (h == 0) {
            $(".mi").addClass("show");
            h++;
        }
        else {
            $(".mi").removeClass("show");
            h--;
        }
    }
</script>

